// js


let botao = document.querySelector('#resp-bnt')
let msg = document.querySelector('#msg')

botao.addEventListener('click', () => {

    let nome = document.getElementById('nome-inp').value

    let quantidade = Number(document.getElementById('qnt-inp').value)

    let  preco = document.getElementById('val-inp').value
    

    if (nome == "" || quantidade == "" || preco == ""){
        texto = ' Error: insira valores validos, n√£o nulos'
        cor = 'red'
    } else {
        texto = 'nome: ' + nome + ', quantidade: ' + quantidade + ', preco: R$' + preco;
        cor = 'black'
    }

    msg.innerHTML = "<p style = ' color: "+cor+ "';> " + texto + '</p>'
})
