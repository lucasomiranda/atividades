// Seleciona o bot√£o pelo id
let button = document.querySelector('#bnt-v')

// Gera um n√∫mero aleat√≥rio entre 1 e 100
let numero_secreto = Math.floor(Math.random() * 100) + 1;

// Seleciona a div onde a mensagem ser√° exibida
let mensagem = document.querySelector('#msg-div')

// Adiciona um evento de clique no bot√£o
button.addEventListener('click', () => {

    // Vari√°vel que vai guardar o texto da resposta
    let texto = ''

    // Pega o valor digitado no input e converte para n√∫mero
    let numero = Number(document.getElementById('inp-num').value)
        
    // Verifica se o n√∫mero digitado √© igual ao n√∫mero secreto
    if (numero == numero_secreto){
        texto = 'Parab√©ns! Voc√™ acertou üéâ'

    // Verifica se o n√∫mero √© inv√°lido (menor ou igual a 0)
    } else if (numero <= 0 ){
        texto = 'Coloque um n√∫mero v√°lido'

    // Se o n√∫mero for maior que o secreto
    } else if (numero > numero_secreto){
        texto = 'Muito alto!'
        tentativas-- // diminui uma tentativa

    // Se o n√∫mero for menor que o secreto
    } else if (numero < numero_secreto){
        texto = 'Muito baixo!'
        tentativas-- // diminui uma tentativa

    // Mostra a mensagem na tela
    mensagem.innerHTML = "<p>" + texto + '</p>'
});
