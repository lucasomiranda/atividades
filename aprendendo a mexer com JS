	//colocar no JS

document.querySelector('#meu_botao')?.addEventListener('click', () => {
    document.body.style.backgroundColor = "red"
});

document.querySelector('#ui_boton')?.addEventListener('click', () => {
    document.body.style.backgroundColor = "green"
});
