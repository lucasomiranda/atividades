<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>scripts</title>
    
</head>
<body>

    <button id = "meu_botao" >mudar fundo para vermelho</button>
    <button id="ui_boton">mudar fundo para verde</button>
	<button id="tic"> voltar a cor original</button>
    <button id = "msg"> mensagem </button>
<script src="script.js"></script>
</body>
</html>

	//colocar no JS

document.querySelector('#meu_botao')?.addEventListener('click', () => {
    document.body.style.backgroundColor = "red"
});

document.querySelector('#ui_boton')?.addEventListener('click', () => {
    document.body.style.backgroundColor = "green"
});

document.querySelector('#tic')?.addEventListener('click', () => {
    document.body.style.backgroundColor = "white"
});

document.querySelector('#msg')?.addEventListener('click', () => {
    alert("seja bem-vindo ao meu app da aula 01 Introdução ao JavaScript")
