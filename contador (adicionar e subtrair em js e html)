<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="att.js" defer></script>
</head>
<body>
    <button  id="mais-bnt"> + </button>
    <h1 id="cont"> 0 </h1>
    <button id="menos-bnt"> - </button>
</body>
</html>

//js

// declaração de variaveis
let numero = 0
let b1 = document.querySelector('#mais-bnt')
let b2 = document.querySelector('#menos-bnt')
let cont = document.querySelector('#cont')

// cont.textContent

// adiciona 1 quando vc clica no botão
b1.addEventListener('click', () => {
    numero++
    cont.textContent = numero
})
// subtrai 1 quando vc clica no botão
b2.addEventListener('click', () => {
    numero--
    cont.textContent = numero
})
