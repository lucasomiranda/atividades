//js

let botao = document.querySelector('#inc-bnt')
let botao2 = document.querySelector('#exc-1')
let botao3 = document.querySelector('#exc-ult')
let botao4 = document.querySelector('#procurar')
let mensagem = document.querySelector('#msg')
let mensagem2 = document.querySelector('#msg-inclus')

let produtos = []

    
botao.addEventListener('click', () => {
    let nome = document.getElementById('incrementar').value
    let quantidade = document.getElementById('quantidade').value

    let texto = ''

    produtos.push({ id: produtos.length + 1, nome: nome, quantidade: quantidade })

    texto = 'lista de produtos:  <br>' + produtos.map(p => " nome: " + p.nome +" "+ p.quantidade + "x" ).join('<br>')

    if (produtos.length > 0) {
        texto += '<br> total de produtos: ' + produtos.length
    }

    mensagem.innerHTML= "<p>" + texto + '</p>'
})

botao2.addEventListener('click', () => {
    
    if (produtos.length > 0) {
        produtos.shift()
        let texto = 'lista de produtos:  <br>' + produtos.map(p => " nome: " + p.nome +" "+ p.quantidade + "x" ).join('<br>')
        mensagem.innerHTML= "<p>" + texto + '</p>'
    }
})

botao3.addEventListener('click', () => {
    if (produtos.length > 0) {
        produtos.pop()
        let texto = 'lista de produtos:  <br>' + produtos.map(p => " nome: " + p.nome +" "+ p.quantidade + "x" ).join('<br>')
        mensagem.innerHTML= "<p>" + texto + '</p>'
    }
})

botao4.addEventListener('click', () => {
    let id = document.getElementById('achar').value
    let produto = produtos.find(p => p.id == id || p.nome == id)
    if (produto) {
        mensagem2.innerHTML = "<p>Produto encontrado: " + produto.nome + "</p>"
    } else {
        mensagem2.innerHTML = "<p>Produto não encontrado</p>"
    }
})
