//js

let botao = document.querySelector('#imc')
let mensagem = document.querySelector('#msg-div')

botao.addEventListener('click', () => {

    let peso = Number(document.getElementById('inp-peso').value)
    let altura = Number(document.getElementById('inp-altura').value)
    let texto = ''
    
    if (peso > 0 && altura > 0){
        let resultado = peso/(altura*altura).toFixed(1)

        if (resultado < 18.5) {
            texto = "Abaixo do peso " + resultado.toFixed(1);
        } else if (resultado >= 18.5 && resultado < 25) {
            texto = "Peso normal " + resultado.toFixed(1);
        } else if (resultado >= 25 && resultado < 30) {
            texto = "Sobrepeso " + resultado.toFixed(1);
        } else {
            texto = "Obesidade " + resultado.toFixed(1);
        }




        mensagem.innerHTML = "<p>" + texto + '</p>'
    } else{
        mensagem.innerHTML ="<p> insira um numero valido"
    }
});
