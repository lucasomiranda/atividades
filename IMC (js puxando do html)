<form action="" >
    <input type="int" name="" id="inp-peso" placeholder="digite seu peso">
    <br><br>
    <input type="int" name="" id="inp-altura" placeholder="digite sua altura">
    <br><br>
    <button type="button" id="imc">calcular imc</button>
    <br>
    <div id="msg-div"></div>
