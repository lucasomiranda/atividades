//js

let botao = document.querySelector('#resp-bnt')
let msg = document.querySelector('#msg')

botao.addEventListener('click', () => {

    texto = ''

    let num1 = Number(document.getElementById('num1-inp').value)

    let num2 = Number(document.getElementById('num2-inp').value)

    let op = document.getElementById('op-inp')

    if (op.value == "+" ){
        texto = num1 + num2
    } else if (op.value == "-" ){
        texto = num1 - num2
    } else if (op.value == "/" ){
        texto = num1 / num2
    } else if (op.value == "x" ){
        texto = num1 * num2
    }

    msg.innerHTML = "<p> o resultado de: " + num1 + " " + op.value + " " + num2 + " Ã©: " + texto + '</p>'



});

