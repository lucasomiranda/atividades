<body>
    <form action="">
        <input type="text" name="" id="num1-inp" placeholder="digite o primeiro numero">
        <input type="text" name="" id="op-inp" placeholder="digite aqui o operador">
        <input type="text" name="" id="num2-inp" placeholder="digite o segundo numero">

        <button type="button" id="resp-bnt">resposta</button>

        <div id="msg"></div>


    </form>
