//js (digite a o menos uma das notas com ponto ex: 7.0, 6.9)

let botao = document.querySelector('#bnt-calc')
let msg = document.querySelector('#msg-div')


botao.addEventListener('click', () => {
    let nota =  Number(document.getElementById('inp-nota').value)
    let nota2 = Number(document.getElementById('inp-nota2').value)
    let media = (nota + nota2)/ 2
    let texto = ''

    if ( media <= 4.5){
        texto = ' você foi reprovado! '
    } else if ( media <= 6.5){
        texto = ' você está de recuperação '
    } else if ( media <= 10){
        texto = 'você passou!'
    } else {
        texto = 'invalido'
    }

    msg.innerHTML = "<p>" + texto + '</p>'
});
