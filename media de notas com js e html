<form action="">
    
    <input type="text" id="inp-nota" placeholder="digite sua primeira nota">
    <input type="text" id="inp-nota2" placeholder="digite sua segunda nota">
    
    <button type="button" id="bnt-calc">caucular media</button>
    <div id="msg-div"></div>
